<h1>{{"Hello, Angular!"}}</h1>

<div ng-controller="FestivalController as festival">

<p ng-repeat="artist in festival.artists"> {{artist.display_name}} </p>

</div>
<div class="explore">
    <%= @festival.display_name %>
  </div>
</div>

<div class="fav_artists_box">
	<div class="list-placeholder">
		<% @artists.each do |t| %>
	    <div class="artist_row">
	    	<span class="band_name"><%= t.display_name %></span>
	    	<a class="listen" href="" data-fest= "<%=@festival.id%>" data-val="<%=t.id%>">Listen</a>
	    </div>	    
    <% end %>
	</div>

	<div class="video-placeholder">
		<%= render "youtube_vid" %>
	</div>
</div>

<h3>
	<a href="" onclick="setTimeout(function(){var ww = window.open(window.location, '_self'); ww.close(); }, 1000);">
    Close
</a>
</h3>