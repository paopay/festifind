@import url(http://fonts.googleapis.com/css?family=Kaushan+Script);
$main-color: #0772A1;
@mixin rounded-corners {
  border-radius: 15px;
}
@mixin band-name-info {
  color:#63AFD0;
  font-family:Arial;
  font-size:20px;
  font-weight:bold;
  font-style:normal;
  display:inline;
  height:28px;
  line-height:28px;
  text-decoration:none;
}
@mixin basic-seperators{
  margin-bottom: 20px;
    text-align: center;
}
body {
  background-color: $main-color;
  color: black;
}

.upcoming,.popularity,.distance,.random,.filters{
    margin-bottom: 20px;
    text-align: center;
    @include basic-seperators;
    color:#FF8700;
  font-family:Arial;
  font-size:20px;
  font-weight:bold;
}

#header_bar {
    background-color:lighten($main-color,20%);
  @include basic-seperators    
}
.band_name{
  display:inline;
  font-size: 20px;
}
.list-placeholder{
  width:325px;
  display:inline-block;
  font-size:2em;
  overflow: auto;
  height:530px;
  background-color: white;
  border: 1px solid black;
  margin-bottom: 50px;
  text-align:left;
  margin: 0px auto;
  margin-left: 250px;
}

.video-placeholder{
  width: 800px;
  display:inline-block;
  font-size:2em;
  overflow: auto;
  height: 530px;
  background-color: white;
  border: 1px solid black;
  margin-bottom: 50px;
  text-align:left;
  margin: 0px auto;
}

.fav_arists_box{
margin-right: auto;
margin-left: auto;
color: #FF8700;
text-align: center;
}

#header {
  font-family: 'Kaushan Script', cursive;
  font-size: 500%;
  text-align: center;
  padding: 10px;
}


#header_text {
    font-family: 'Rokkit', cursive;
    font-size: 500%;
    text-align: center;
    padding: 10px;
  }
  .artist_row{
  padding:5px;
  display:block;
  }

  .artist_row:nth-child(odd) {
    background-color: #F5E5B7;
}

#grid {
  margin: 0 auto;
  text-align: center;
}

.block, .image, .info {
  overflow: hidden;
}

.image, .info {
  vertical-align: middle;
}

.block {
  height: 300px;
  width: 300px;
  background-color: #0772a1;
  @include rounded_corners;
  margin: 1px;
  padding: 2px;
}

.image {
  display: table-cell;
  height:300px;
  width:300px;
}

.image2 {
  display: table-cell;
  height:300px;
  width:300px;
}


a.listen{
  float:right;
  @include band-name-info;
}
a.listen:hover{
  border-bottom:2px solid #594E23;
}
.favs a,.favs{
  @include band-name-info;
  margin:5px;
  text-indent:0;
  width:150px;
  text-decoration:none;
  text-align:center; 
}
.favs:hover {
  
  border-bottom:2px solid black;
}
.favs:active {
  position:relative;
  top:1px;
  }
.info {
  display: none;
}
#festivals_box {
  display:none;
}
#festivals_box,.artists_box {
  background-color:white;
  border:1px solid black;
  margin-bottom:50px;
  width:1000px;
  margin-right: auto;
margin-left: auto;

}
.artists_module{
  display:none;
}
.festival_name {
  width: 400px;
display: inline-block;
}

.festival-icon {
  max-width: 100%;
  height: 305px;

}
.fav_text {
  color:$main-color;
  font-size: 2em;

}
.explore, #show_favs  {
  color: #594E23;
  font-size:4em;
  text-align:center;
  .no_favs,.fav_artists_box{
  font-size:.5em;
  }
}
#show_favs{
  display:none;
  #each_festival {
  font-size:.5em;
}
}

.playlist {
  padding-top: 10px;
}
.each_festival {
  display:none;
}
.playlist-object {
  height: 240px;
}
.square{
  height:375px;
  width:325px;
  display:inline-block;
  margin:0;
}
.favorite{
  display:block;
  height:50px;
  width:220px;
  text-align: center;
  margin: auto;
}
#search_box {
display: inline;
float:right;
margin-bottom: -20px;
}
#search_text{
    width: 225px;
    padding: 15px 0 15px 20px;
    font-size: 20px;
    font-family: Montserrat, sans-serif;
    border: 0 none;
    height: 32px;
    margin-right: 0;
    color: yellow;
    outline: none;
    background: orange;
    float: left;
    box-sizing: border-box;
    transition: all 0.15s;
}
#artist_search_text{
    width: 225px;
    padding: 15px 0 15px 20px;
    font-size: 20px;
    font-family: Montserrat, sans-serif;
    border: 0 none;
    height: 32px;
    margin-right: 0;
    color: yellow;
    outline: none;
    background: orange;
    float: left;
    box-sizing: border-box;
    transition: all 0.15s;
}
::-webkit-input-placeholder { /* WebKit browsers */
    color: white;
}
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
    color: white;
}
::-moz-placeholder { /* Mozilla Firefox 19+ */
    color: white;
}
:-ms-input-placeholder { /* Internet Explorer 10+ */
    color: white;
}
#search_text:focus {
    background: blue;
}
#artist_search_text:focus {
    background: blue;
}
#search_button {
    border: 0 none;
    background: orange center no-repeat;
    width: 60px;
    float: left;
    padding: 0;
    text-align: center;
    height: 32px;
    cursor: pointer;
}
