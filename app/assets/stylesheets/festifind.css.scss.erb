// hipster colors: #52443B - Brown
// #BDBDBD: gray
// #767177: darker gray
// #E0B453: gold
// #353535: charcoal

@import url(http://fonts.googleapis.com/css?family=Pacifico);
@import url(http://fonts.googleapis.com/css?family=Rokkitt);
@import url(http://fonts.googleapis.com/css?family=Bree+Serif);
@import url(http://fonts.googleapis.com/css?family=Dosis);
@import url(http://fonts.googleapis.com/css?family=Raleway);

$main-color: #767177;

@mixin rounded-corners {
  border-radius: 15px;
}

.row{
  display:block;
  width:100%
}


@mixin band-name-info {
  color:#63AFD0;
  font-family: 'Raleway';
  font-size:20px;
  font-weight:bold;
  font-style:normal;
  display:inline;
  height:28px;
  line-height:28px;
  text-decoration:none;
}

@mixin basic-seperators{
  margin-bottom: 20px;
    text-align: center;
}


body {
  background-color: $main-color;
  background: url(http://subtlepatterns.com/patterns/tweed.png);
  font-family: 'Dosis', serif;
  color: white;
  text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
}

.upcoming,.popularity,.distance,.random,.filters {
  margin-bottom: 20px;
  text-align: center;
  @include basic-seperators;
  color:#BDBDBD;
  font-family:'Dosis';
  font-size:20px;
  font-weight:bold;
    a {
      text-decoration: none;
        &:hover {
          color: #E0B453;
        }
        &:visited {
          color: #BDBDBD;
        }
    }
}

//---------HEADER-----------

#header_bar {
  @include basic-seperators;
  background-color:#353535;
  color: #E0B453;
  background: url(http://subtlepatterns.com/patterns/binding_dark.png);
  font-family: 'Bree Serif', cursive;
  margin-bottom: 0;   
}

#header_text {
  @include basic-seperators;
  font-family: 'Pacifico', cursive;
  font-size: 500%;
  text-align: center;
  padding-bottom: 10px;
}

.band_name{
  display:inline;
  font-size: 20px;
}

.list-placeholder{
  width:325px;
  display:inline-block;
  font-size:2em;
  overflow: auto;
  height:530px;
  background-color: white;
  border: 1px solid black;
  margin-bottom: 50px;
  text-align:left;
  margin: 0px auto;
  margin-left: 250px;
}

.video-placeholder{
  width: 800px;
  display:inline-block;
  font-size:2em;
  overflow: auto;
  height: 530px;
  background-color: white;
  border: 1px solid black;
  margin-bottom: 50px;
  text-align:left;
  margin: 0px auto;
}

.fav_arists_box{
margin-right: auto;
margin-left: auto;
color: #FF8700;
text-align: center;
}

.artist_row{
  padding:5px;
  display:block;
}

.artist_row:nth-child(odd) {
  background-color: #F5E5B7;
}


.block, 
.image, 
.info {
  overflow: hidden;
}

.image, .info {
  vertical-align: middle;
}

.block {
  @include rounded_corners;
  height: 300px;
  width: 300px;
  background-color: #0772a1;
  margin: 1px;
  padding: 2px;
}

.image {
  display: table-cell;
  height:300px;
  width:300px;
}

.image2 {
  display: table-cell;
  height:300px;
  width:300px;
}


a.listen{
  float:right;
  @include band-name-info;
}
a.listen:hover{
  border-bottom:2px solid #594E23;
}
.favs a,.favs{
  @include band-name-info;
  margin:5px;
  text-indent:0;
  width:150px;
  text-decoration:none;
  text-align:center; 
}
.favs:hover {
  
  border-bottom:2px solid black;
}
.favs:active {
  position:relative;
  top:1px;
  }
.info {
  display: none;
}
#festivals_box {
  display:none;
}
#festivals_box,.artists_box {
  background-color:white;
  border:1px solid black;
  margin-bottom:50px;
  width:1000px;
  margin-right: auto;
margin-left: auto;

}
.artists_module{
  display:none;
}


.festival-icon {
  max-width: 100%;
  height: 305px;

}
.fav_text {
  color:$main-color;
  font-size: 2em;

}
.explore, #show_favs  {
  color: #594E23;
  font-size:4em;
  text-align:center;
  .no_favs,.fav_artists_box{
  font-size:.5em;
  }
}
#show_favs{
  display:none;
  #each_festival {
    font-size:.5em;
  }
}

.playlist {
  padding-top: 10px;
}
.each_festival {
  display:none;
}
.playlist-object {
  height: 340px;
}
.square{
  height:375px;
  width:325px;
  display:inline-block;
  margin:0;
}
.favorite{
  display:block;
  height:50px;
  width:220px;
  text-align: center;
  margin: auto;
}

// ---- New Rows --------// 
.festival_name{
  font-size:2em;
}

.row{
  display:block;
  margin-bottom:30px;
  border-bottom:black solid 1px;

}
.left_info,.middle_info{
  display:inline-block;
  margin-right:40px;
}


#grid{
  display:block;
  width:100%
}








